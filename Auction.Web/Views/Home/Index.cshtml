@model Auction.Web.ViewsModels.AuctionsViewModels
<div class="row">


    <div class="col-md-12">

        <div class="row carousel-holder">

            <div class="col-md-12">
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="item active">
                            <img class="slide-image" src="https://dummyimage.com/800x300/dee2e6/6c757d.jpg" alt="">
                        </div>
                        <div class="item">
                            <img class="slide-image" src="https://dummyimage.com/800x300/dee2e6/6c757d.jpg" alt="">
                        </div>
                        <div class="item">
                            <img class="slide-image" src="https://dummyimage.com/800x300/dee2e6/6c757d.jpg" alt="">
                        </div>
                    </div>
                    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div>
            </div>

        </div>

        <div class="row">
            @foreach (var auction in Model.PromotedAuctions)
            {
                var picURL = auction.AuctionPictures != null && auction.AuctionPictures.Count > 0 ?
                    "/Content/images/" + auction.AuctionPictures.First().Picture.URL : "https://dummyimage.com/320x150/dee2e6/6c757d.jpg";


                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <img src="@picURL" alt="">
                        <div class="caption">
                            <h4 class="pull-right">@auction.ActualAmount</h4>
                            <h4>
                                <a href="@Url.Action("Details", "Auctions", new { ID = auction.ID })">@auction.Title</a>
                            </h4>
                            <p>@auction.Description</p>
                        </div>
                        <div class="ratings">
                            <p class="pull-right">15 reviews</p>
                            <p>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row">

            @foreach (var auction in Model.AllAuctions)
            {
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <img src="https://dummyimage.com/320x150/dee2e6/6c757d.jpg" alt="">
                        <div class="caption">
                            <h4 class="pull-right">@auction.ActualAmount</h4>
                            <h4>
                                <a href="#">@auction.Title</a>
                            </h4>
                            <p>@auction.Description</p>
                        </div>
                        <div class="ratings">
                            <p class="pull-right">15 reviews</p>
                            <p>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                            </p>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>

</div>
