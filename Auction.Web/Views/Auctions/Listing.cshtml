
@model Auction.Web.ViewsModels.AuctionsListingViewModels

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Category
            </th>
            <th>
                Description
            </th>
            <th>
                Actual Amount
            </th>
            <th>
                Starting Time
            </th>
            <th>
                Ending Time
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Auctions != null && Model.Auctions.Count > 0) {
            foreach (var auction in Model.Auctions)
            {
                <tr>
                <td>
                    <input type="hidden" name="ID" value="@auction.ID" />
                    @auction.Title
                </td>
                <td>
                    @auction.Category.Name
                </td>
                <td>
                    @auction.Description
                </td>
                <td>
                    @auction.ActualAmount
                </td>
                <td>
                    @auction.StartingTime
                </td>
                <td>
                    @auction.EndingTime
                </td>
                <td>
                    <button class="editButton btn btn-primary" data-id="@auction.ID" data-toggle="modal" data-target="#formModal">Edit</button>
                    <button class="deleteButton btn btn-danger" data-id="@auction.ID" data-toggle="modal" data-target="#deleteModal">Delete</button>
                </td>
            </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">
                    No Result Found.
                </td>
            </tr>
        }

    </tbody>
</table>

@if(Model.Pager != null && Model.Pager.TotalPages > 0)
{
    <nav aria-label="" style="display: flex; justify-content: center;">
        <ul class="pagination">
            @if (Model.Pager.CurrentPage == 1)
            {
                <li class="disabled">
                    <a href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            else
            {
                <li class="">
                    <a href="@Url.Action("Index", "Auctions", new { pageNo = Model.Pager.CurrentPage - 1, categoryID = Model.CategoryID , searchTerm = Model.SearchTerm })" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }

            @for (int page = Model.Pager.StartPage; page < Model.Pager.EndPage + 1; page++)
            {

                var active = page == Model.Pager.CurrentPage ? "active" : string.Empty;

                <li class="@active">
                    <a href="@Url.Action("Index", "Auctions", new { pageNo = page })">
                        @page
                    </a>
                </li>
            }

            @if (Model.Pager.CurrentPage == Model.Pager.EndPage)
            {
                <li class="disabled">
                    <a href="#" aria-label="Next">
                        <span aria-hidden="true">»</span>
                    </a>
                </li>
            }
            else
            {
                <li class="">
                    <a href="@Url.Action("Index", "Auctions", new { pageNo = Model.Pager.CurrentPage + 1 })" aria-label="Next">
                        <span aria-hidden="true">»</span>
                    </a>
                </li>
            }

        </ul>
    </nav>
}




<script>
    $(".editButton").click(function () {
        $.ajax({
            url: "@Url.Action("Edit", "Auctions")",
            type: "get",
            data: {
                ID: $(this).attr("data-id")
            }
        }).done(function (response) {
            $("#contentArea").html(response);
            /*$('#formModal').modal('toggle');*/
        });
    });

    $(".deleteButton").click(function () {
        $('#deleteModal').modal('toggle');
        $('#mDeleteButton').attr("data-recordID", $(this).attr("data-id"));
    });

</script>









